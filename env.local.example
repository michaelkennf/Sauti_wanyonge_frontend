# Configuration API Backend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Configuration de l'application
NEXT_PUBLIC_APP_NAME="Sauti ya Wa Nyonge"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Configuration de géolocalisation
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_DEFAULT_COUNTRY=CD
NEXT_PUBLIC_DEFAULT_PROVINCE=Kinshasa

# Configuration des fichiers
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_MAX_RECORDING_DURATION=35
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,audio/mpeg,audio/wav,audio/webm,audio/mp3,video/mp4,video/webm,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Configuration de l'IA (pour le futur)
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_AI_ENABLED=true

# Configuration des notifications
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Configuration du mode hors ligne
NEXT_PUBLIC_OFFLINE_MODE=true
NEXT_PUBLIC_SYNC_INTERVAL=30000

# Configuration de sécurité
NEXT_PUBLIC_ENABLE_BIOMETRIC=true
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
NEXT_PUBLIC_REQUIRE_CONSENT=true
