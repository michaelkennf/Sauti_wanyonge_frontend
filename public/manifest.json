  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+sauti",
      "url": "/enqueteur/formulaire?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/enqueteur/formulaire",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "video/*": [".mp4", ".webm", ".mov"],
        "audio/*": [".mp3", ".wav", ".webm"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "share_target": {
    "action": "/enqueteur/formulaire",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "evidence",
          "accept": ["image/*", "video/*", "audio/*", "application/pdf"]
        }
      ]
    }
  }
}
